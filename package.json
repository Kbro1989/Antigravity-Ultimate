{
  "name": "pog-ultimate",
  "version": "1.0.0",
  "description": "POG Engine Ultimate - Production-Ready AI Workspace",
  "type": "module",
  "workspaces": [
    "services/bridge",
    "services/cli"
  ],
  "scripts": {
    "dev": "concurrently \"vite\" \"wrangler dev src/index.ts --local\" \"npm run dev --workspace=pog-bridge\" \"npm run start --workspace=pog-cli\"",
    "prebuild": "(npm run build:wasm || echo WASM build skipped) && npm run build:limbs",
    "build": "vite build",
    "clean:logs": "powershell -Command \"Get-ChildItem -Filter 'tsc_errors*.log' -Recurse | Remove-Item -Force\"",
    "build:clean": "npm run clean:logs && npm run build",
    "build:all": "npm run build && npm run deploy --workspace=pog-bridge && npm run build --workspace=pog-cli",
    "build:wasm": "cargo build --target wasm32-unknown-unknown --release --manifest-path src/services/game/rsmv/wasm/Cargo.toml && copy src\\services\\game\\rsmv\\wasm\\target\\wasm32-unknown-unknown\\release\\rsmv_wasm.wasm public\\assets\\wasm\\rsmv_engine.wasm",
    "build:limbs": "node scripts/package-limbs.js",
    "deploy": "vite build && wrangler deploy",
    "deploy:all": "npm run build:all && npm run deploy && npm run deploy --workspace=pog-bridge && npm run deploy --workspace=pog-cli",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "host": "env-cmd -f .env.local tsx scripts/bridge-host.ts",
    "bridge:dev": "npm run dev --workspace=pog-bridge",
    "cli:listen": "npm run listen --workspace=pog-cli"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.1",
    "@cloudflare/workers-types": "^4.20240117.0",
    "@google/generative-ai": "^0.24.1",
    "@ledgerhq/compressjs": "^1.3.2",
    "@monaco-editor/react": "^4.7.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "@swiftcarrot/color-fns": "^3.2.0",
    "@types/lodash.debounce": "^4.0.9",
    "@types/three": "^0.182.0",
    "autobind-decorator": "^2.4.0",
    "buffer": "^6.0.3",
    "classnames": "^2.5.1",
    "clsx": "^2.1.0",
    "cmd-ts": "^0.14.3",
    "comment-json": "^4.5.1",
    "deps": "^1.0.0",
    "fflate": "^0.8.2",
    "framer-motion": "^10.18.0",
    "glob": "^13.0.0",
    "hls.js": "^1.6.15",
    "hono": "^4.11.3",
    "idb-keyval": "^6.2.2",
    "json-schema": "^0.4.0",
    "json-stringify-pretty-compact": "^4.0.0",
    "lodash.debounce": "^4.0.8",
    "lucide-react": "^0.314.0",
    "partyserver": "^0.0.45",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reactflow": "^11.11.4",
    "tailwind-merge": "^2.2.1",
    "three": "^0.182.0",
    "three-stdlib": "^2.36.1"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/sqlite3": "^3.1.11",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "env-cmd": "^11.0.0",
    "events": "^3.3.0",
    "postcss": "^8.4.33",
    "sqlite3": "^5.1.7",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "util": "^0.12.5",
    "vite": "^7.3.0",
    "vite-plugin-node-polyfills": "^0.2.0",
    "vitest": "^4.0.16",
    "wrangler": "4.54.0"
  }
}
